extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名字
                        th 评论标题
                        th 评分
                        th 内容
                        th 录入时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in comments
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td #{item.commentname}
                            td #{item.mark}
                            td #{item.content}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a(target="_blank", href="../comment/#{item._id}") 查看
                            td: a(target="_blank", href="../write/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    script(src="/js/admincomment.js")